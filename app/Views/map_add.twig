{% extends 'base.html.twig' %}

{% block content %}
<div class="center-container">

{% if mapselectform %}
{% include 'partials/map_select.html.twig' %}
{% endif %}

{% if mapform %}

<div class='mapform'>
<span class='descr'>Add entry in Map: {{ mapdescr }}</span>

<div class='formmap'>

{{ form_start(mapform) }}

{% for field in mapform %}
 {% if field.vars.name != 'submit' and field.vars.name != '_token' %}
	<div class="row">
	 <div class='info'> {{ form_label(field) }}</div>
	 <div class='detail'>    {{ form_widget(field) }}
	   {{ form_errors(field) }}
	 </div>
	</div>
 {% endif %}
{% endfor %}

<div class="row">
 <div class="info"></div>
 <div class="detail"> {{ form_widget(mapform.submit) }}</div>
</div>

{{ form_end(mapform) }}

</div>
{% endif %}
</div>

</div>
{% endblock %}
