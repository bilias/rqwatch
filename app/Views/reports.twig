{% extends 'base.html.twig' %}

{% block content %}
<div class="center-container">

<div class='quarantine'>

 <span class='descr'>Top {{ max_items }} {{ field|replace({'_': ' '})|upper }}
 {% if mode == 'volume' %}
  by Volume
 {% else %}
  by Quantity
 {% endif %}
 </span>

 <div class="row caption">
   <div class="cell left">{{ field|replace({'_': ' '})|upper }}</div>
   <div class="cell right"># of mails</div>
   <div class="cell right">Total size</div>
 </div>

<div class='quarantine_days'>
{% for log in logs %}
 {% set value = attribute(log, field) %}
 <div class="row">
  <div class='cell day'>
  {% if field in reportFields %}
	{% if is_admin %}
	<a href="{{ route('ADMIN_SEARCH_RESULTS') }}?{{ field }}={{ value|url_encode }}">
		{{ value }}
   </a>
	{% else %}
	<a href="{{ route('SEARCH_RESULTS') }}?{{ field }}={{ value|url_encode }}">
		{{ value }}
   </a>
	{% endif %}
  {% else %}
		{{ value }}
  {% endif %}
  </div>
  <div class='cell right cnt'>{{ log.total|nf }}</div>
  <div class='cell right cnt'>{{ formatSizeUnits(log.total_size) }}</div>
 </div>
{% endfor %}
</div>

{% endblock %}
