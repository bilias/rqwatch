{% if is_admin %}
{% set homepage = route('ADMIN_HOMEPAGE') %}
{% set day_logs = route('ADMIN_DAY_LOGS') %}
{% set maps = route('ADMIN_MAPS') %}
{% set quarantine = route('ADMIN_QUARANTINE') %}
{% set search = route('ADMIN_SEARCH') %}
{% set users = route('ADMIN_USERS') %}
{% set aliases = route('ADMIN_ALIASES') %}
{% else %}
{% set homepage = route('HOMEPAGE') %}
{% set day_logs = route('DAY_LOGS') %}
{% set maps = route('MAPS') %}
{% set quarantine = route('QUARANTINE') %}
{% set search = route('SEARCH') %}
{% endif %}
{% set profile = route('PROFILE') %}
{% set logout = route('LOGOUT') %}

<div class="topmainmenu">
  <ul id="menu" class="mainmenu">
    <li class="{{ current_route == homepage ? 'active' : '' }}">
      <a href="{{ homepage }}">All</a>
    </li>
    <li class="{{ current_route == day_logs ? 'active' : '' }}">
      <a href="{{ day_logs }}">Today</a>
    </li>
{% if maps %}
{% set mapSingularBase = maps|replace({'/maps': '/map'}) %}
{% set isMapRoute = current_route starts with maps or current_route starts with mapSingularBase %}

    <li class="{{ isMapRoute ? 'active' : '' }}">
      <a href="{{ maps }}">Maps</a>
    </li>
{% endif %}
    <li class="{{ current_route == quarantine ? 'active' : '' }}">
      <a href="{{ quarantine }}">Quarantine</a>
    </li>
    <li class="{{ current_route == search ? 'active' : '' }}">
      <a href="{{ search }}">Search</a>
    </li>
{% if is_admin %}
    <li class="{{ current_route == users ? 'active' : '' }}">
      <a href="{{ users }}">Users</a>
    </li>
    <li class="{{ current_route == aliases ? 'active' : '' }}">
      <a href="{{ aliases }}">Aliases</a>
    </li>
{% endif %}
    <li class="profilelink {{ current_route == profile ? 'active' : '' }}">
      <a href="{{ profile }}">Profile</a>
    </li>
    <li class="logoutlink"><a href="{{ logout }}">Logout</a>
    </li>
  </ul>
</div>

