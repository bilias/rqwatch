<section>

{% if map_configs is not empty %}

<div class='mapform descr'>
Manage Custom Maps | Total: {{ totalRecords }} entries
{% if totalRecords > items_per_page %}
| Displaying {{ items_per_page }}/page
{% endif %}
<div id="inside_links">
<ul>
<li><a href='{{ route('ADMIN_MAPS_CUSTOM_ADD') }}'>Add New Custom Map</a></li>
</ul>
</div>
</div>

<div class='mapform'>
<table border='0' align='center' cellpadding='5' cellspacing='1' class='mail rowhover'>
<thead><tr>
 <th>Map Name</th>
 <th>Map Description</th>
 <th>Field Name</th>
 <th>Field Label</th>
 <th>Updated</th>
 <th>Entries</th>
 <th>Delete</th>
 <th>Edit</th>
</tr></thead>

<tbody>
    {% for entry in map_configs %}
      <tr class='clean'>
			<td class='center'><a target='_blank' href="{{ maps_url_base ~ entry.map_name ~ '.txt' }}">{{ entry.map_name }}</a></td>
			<td class='center'><a href="{{ route('ADMIN_MAP_SHOW', { map: entry.map_name }) }}">{{ entry.map_description }}</a></td>
			<td class='center'>{{ entry.field_name }}</td>
			<td class='center'>{{ entry.field_label }}</td>
			<td class='center'>{{ entry.updated_at }}</td>
			<td class='center'><a href="{{ route('ADMIN_MAP_SHOW', { map: entry.map_name }) }}">{{ entry.map_entries|nf }}</a></td>
			<td class='center'><a href="{{ route('ADMIN_MAPS_CUSTOM_DEL', { id: entry.id }) }}" onclick="return confirm('Are you sure you want to delete custom map:\n\'{{ entry.map_description }}\'?\n\'{{ entry.map_entries }}\' map entries will also be deleted.')">Delete</a></td>
			<td class='center'><a href="{{ route('ADMIN_MAPS_CUSTOM_EDIT', { id: entry.id }) }}">Edit</a></td>
      </tr>
    {% endfor %}
</tbody>

</table>
</div>

{% else %}
    <span class='help-text2'>No entries found</span>
{% endif %}

</section>
